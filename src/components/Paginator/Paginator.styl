.paginator
    display flex
    user-select none
  
    &__toggle
    &__page-num
        display flex
        align-items center
        justify-content center
        margin-left -1px
        min-width 44px
        min-height 38px
        border 1px solid rgba(0,0,0,.25)
        font-size 22px
        text-decoration none
        background-color #D96F32
        color rgba(255, 255, 255, .85) 
        box-shadow: inset 0px 1px 0px 0px rgba(255,255,255,.35);

        &:hover
            opacity .8

    &__page-num

        @media only screen and (max-width 641px)
            display none

        &_current
            padding-top:.25em;
            color: rgba(255, 255, 255, 1);
            opacity 0.8
            box-shadow: inset 0px 2px 1px 0px rgba(0,0,0,.25);
            cursor: default;
            pointer-events: none;

            @media only screen and (max-width 641px)
                display flex

    &__toggle

        &_disable
            opacity 0.5
            pointer-events: none;  

        &_first-page
        &_last-page
            @media only screen and (max-width 471px)
                display none