.searchbar 
    width 100%
    cursor pointer

    &__form
        width 100%
        display flex
        align-items center  
        position relative

        &:after
            content ''
            display inline-block
            width 15px
            height 3px 
            background-color #D96F32
            transform-origin left center
            transform rotate(50deg) translateX(5px) translateY(15px)
            transition width .15s 0.35s

            ^[0]_open &
                width 0
                transition-delay 0s

    &__input 
        width 40px
        height 40px
        padding 0 15px
        border 4px solid #D96F32
        border-radius 30px
        font-size 14px
        color white
        background-color #092B40
        transition width .35s .15s

        ^[0]_open &
            width 252px  
